<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Hello World, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <h1>URL Shortener</h1>
        <form class="my-4 form-inline" action="/shortUrls" method="POST">
            <label for="fullUrl" class="sr-only">Url:</label>
            <input placeholder="Enter url here" class="form-control mr-2 col" required type="url" name="fullUrl"
                id="fullUrl">
            <button type="submit" class="btn btn-success">Shorten</button>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <th>Full Url</th>
                <th>Short Url</th>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                <tr>
                    <td><a href="<%= shortUrl.fullUrl %>"><%= shortUrl.fullUrl %></a></td>
                    <td><a href="<%= shortUrl.shortUrl %>"><%= shortUrl.shortUrl %></a></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>